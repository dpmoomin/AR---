<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/admin_facility_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <!--시설물_소속건물_id-->
        <TextView
            android:id="@+id/admin_facility_building"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="시설물_빌딩_id"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_소속건물_이름-->
        <TextView
            android:id="@+id/admin_facility_building_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_소속건물_이름"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_사용학과-->
        <TextView
            android:id="@+id/admin_facility_department"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_사용학과"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_층-->
        <TextView
            android:id="@+id/admin_facility_floor"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_층"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_id-->
        <TextView
            android:id="@+id/admin_facility_id"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_id"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_lat-->
        <TextView
            android:id="@+id/admin_facility_lat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_lat"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_long-->
        <TextView
            android:id="@+id/admin_facility_long"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_long"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!--시설물_name-->
        <TextView
            android:id="@+id/admin_facility_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_name"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>


        <!--시설물_idname-->
        <TextView
            android:id="@+id/admin_facility_idname"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="시설물_idname"
            android:textColor="#444"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/modifyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/modify_button"
            app:showAsAction="ifRoom" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/delete_button"
            app:showAsAction="ifRoom" />

    </LinearLayout>

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#aaa"/>

</androidx.cardview.widget.CardView>